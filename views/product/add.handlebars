<div class="container rounded bg-white mt-5 mb-5">
    {{!-- <a href="/">sign up here</a> --}}
    <form action="/products/add" method="POST" name="addproduct" id="addproduct">
        <div class="col-md-9 border">
            <div class="p-3 py-5">
                <h1 class="text-centre">Add a Product</h1>
                <br>
                <h2 class="text-centre">Submit a product for review to be added to our products list.</h2>
                <br>
                <div class="row mt-2">
                    <div class="col-md-6"><h3><label for="newProdName" class="labels">Product Name</label></h3><input type="text" id= "newProdName" name= "newProdName" class="form-control" placeholder="Product Name" value= "{{prod.newProdName}}"></div>
                    <div class="col-md-6"><h3><label for="newProdBrand" class="labels">Brand</label></h3><input type="text" id= "newProdBrand" name= "newProdBrand" class="form-control" placeholder="Product Brand" value= "{{prod.newProdBrand}}"></div>
                </div>
                <br>
                <br>
                <p class= "text-centre">{{error}}</p>
                <p class= "text-centre">{{success}}</p>    
                <div class="mt-5 text-center">
                    <button class="btn btn-primary profile-button" type="submit">Submit</button>
                </div>
                <br>
            </div>
        </div>
    </form> 
</div>