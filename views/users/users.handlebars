<div class="container rounded bg-white mt-5 mb-5">
     <h1 class="Ptitle">Everything has beauty, but not everyone sees it.</h1>
       <h2 class=" Ptitle1">Cosmetic Review Hub</h2>
  <div class="row">

    <div class="col1">
      <form id="form-user-edit" action="/users/profile" method="post">
        <div class="col-md-3 border-right">
          <div
            class="d-flex flex-column align-items-center text-center p-3 py-5"
          ><img
              id="img"
              class="rounded-circle mt-5"
              width="150"
              data-user="{{users.userImage}}"
              src={{users.userImage}}
              alt="Profile"
            /><br /><span class="font-weight-bold"><strong
              >{{users.firstName}}:</strong></span><span
              class="textmail"
            >{{users.email}}</span><span> </span></div>

          <br />
          <label for="imageUpload" class="labels">Upload Image:</label>
          <input
            id="imageUpload"
            name="imageUpload"
            accept="image/*"
            class="form-css"
            type="file"
            {{!id="formFileMultiple"}}
          /><br />

        </div>
        {{! <a href="/">sign up here</a> }}
        <div class="col-md-5 border-right">
          <div class="p-3 py-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <br />

              <h3 class="text-centre">Profile Settings</h3>

              <br />
              <br />
            </div>
            <div class="row mt-2">
              <div class="col-md-6"><label for="firstName" class="labels">Name</label><input
                  type="text"
                  id="firstName"
                  name="firstName"
                  class="form-control"
                  placeholder="first name"
                  value={{users.firstName}}
                /></div>
              <div class="col-md-6"><label for="lastName" class="labels">Surname</label><input
                  type="text"
                  id="lastName"
                  name="lastName"
                  class="form-control"
                  placeholder="last name"
                  value={{users.lastName}}
                ></div>
            </div>
            <div class="row mt-3">
              <div class="col-md-12"><label for="userName"
                  class="labels"
                >UserName (Read-Only)</label><input
                  type="text"
                  id="userName"
                  name="userName"
                  class="form-control"
                  placeholder="enter UserName"
                  value={{users.userName}}
                  readonly
                /></div>
              <div class="col-md-12"><label for="password"
                  class="labels"
                >Password</label><input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="Enter New Password"
                ></div>
              <div class="col-md-12"><label for="email" class="labels">Email ID</label><input
                  type="text"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="enter email id"
                  value={{users.email}}
                ></div>
              <div class="col-md-12"><label for="makeupLevel" class="labels">Makeup Level</label><input
                  type="text"
                  id="makeupLevel"
                  name="makeupLevel"
                  class="form-control"
                  placeholder="enter makeup level"
                  value={{users.makeupLevel}}
                ></div>

            </div>
            {{! <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Country</label><input type="text" class="form-control" placeholder="country" value=""></div>
                    <div class="col-md-6"><label class="labels">State/Region</label><input type="text" class="form-control" value="" placeholder="state"></div>
                </div> }}
            <br />
            <p id = "profile-edit-error" class= "err">{{error}}</p>
            <p id = "profile-edit-success" class= "success">{{success}}</p>
            <div class="mt-5 text-center"><button
                class="btn btn-primary profile-button"
                type="submit"
              >Save Profile</button></div>

            <br />

          </div>

        </div>
      </form>
      <div class="col-md-4">
        <div class="p-3 py-5">
            
              <br>
              
                <label for="wishl">Go to WishList</label><br>
                <button id="wishl" onclick="window.location.href='#wish'" class="btn btn-primary profile-button" type="submit">My WishList</button>
                <br>
                <br>
                <br>
                <label for="revl">Go to Review List</label><br>
                <button id="revl" onclick="window.location.href='#rev'" class="btn btn-primary profile-button" type="submit">My Reviews</button>
              
        </div>
      </div>
    </div>
  </div>
</div>

{{! start of wishlist }}
<div class="main">

  

  <div class="shop_top">
    <div id="wish" class="container">
      {{#if products}}
      <h3 class="wish-title">My wishlist:</h3>
      {{else}}
      <a href="/products">Your Wishlist is Empty, Add products to wishlist</a>
      {{/if}}

      <div  class="row shop_box-top">
        {{#each products}}
          <div class="col-md-3 shop_box" style="margin-top: 30px;">
            <a href="/products/{{this._id}}">
              <img
                src="{{this.productPicture}}"
                class="img-responsive"
                alt="product"
              />
            </a> 
              <div class="shop_desc">
                <h3><a href="/products/{{this._id}}">{{this.productName}}</a></h3>
                <p>{{this.brand}}</p>
                <span class="actual">${{this.price}}</span><br />
                <ul class="buttons">
                  <li><a class="remove" href="/users/wishlist/remove/{{this._id}}">Remove From WishList</a></li>
                  {{! <div class="clear"> </div>}}
                </ul>
              </div>
            </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
{{! end of wishlist }}

<div id="rev" class="container">
   {{#if userReviews}}
     <h3 class="wish-title1">My Reviews:</h3>
      {{else}}
      <a href="/products">No Reviews made by You, share your Review for products</a>
      {{/if}}
  <div class="desc">
   
    <div class="container">
      <div  class="review-list">

     

        {{#each userReviews}}
 
          <div class="card">
            <div class="card-body review-blog">
              <div class="row">
                <div class="col-md-2">
                  <img
                    src={{this.user.userImage}}
                    class="img img-rounded img-fluid"
                    alt="Review User"
                  />              
                  <p class="text-secondary text-center">{{this.date}}</p>
                </div>            
                <div class="col-md-10">
                  <p>
                    <a
                      class="float-left review-username"
                      href="#"
                    ><strong>{{this.user.userName}}</strong></a>
                    <span class="float-right"><i
                        class="text-warning fa fa-star"
                      ></i></span>
                    <span class="float-right"><i
                        class="text-warning fa fa-star"
                      ></i></span>
                    <span class="float-right"><i
                        class="text-warning fa fa-star"
                      ></i></span>
                    <span class="float-right"><i class="rating"><strong
                        >{{this.rating}} </strong></i>
                      <i class="text-warning fa fa-star"></i></span>
                      
                  </p>
                  <div class="clearfix"></div>
                  <p
                    class="review-id"
                    data-reviewid="{{this._id}}"
                  >{{this.title}}</p>
                  <p>{{this.reviewBody}}</p>
                  <div class=" float-right col-md-2">
                   <a href="/products/{{this.productId}}"><img 
                    src={{this.product.productPicture}}
                    class="float-right img img-rounded img-fluid"
                    alt="Reviewed Product"
                  /></a>
                   <a
                      class="float-right btn btn-outline-primary ml-2 review-reply"
                      href="/products/{{this.productId}}"
                    >
                      <i class="fa fa-reply"></i>Product You Reviewd
                    </a>
                  <br>
                
                      <p>
                       <a class="float-right btn btn-danger ml-2 delete-review"> <i class="fa fa-reply"></i> Delete</a>

                  </p>
                    </div>
                  <p>
                     
                     
                    {{! Added class review-reply as an identifier for the review like button }}
                  
                    {{! Added class review-like as an identifier for the review like button }}
                    {{! id = "revlike" }}
                  </p>
                </div>
                  <div class="reviews-members-footer">
                  
                  <div class="total-like">
                    <i
                      class="glyphicon glyphicon-thumbs-up"
                    ></i>{{this.likes.length}}</div>
                    <div class="total-like"><i class="glyphicon glyphicon-comment"></i> {{this.Comments.length}}</div>
                     
                  </div>
              </div>

            </div>
          </div>
        {{/each}}

      </div>
    </div>
  </div>
</div>

