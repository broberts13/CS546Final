<div class="main">
    <div class="container">
        <div class="row mb-5">
            <div class="col card mt-3">
                <div class="card-body">
                    <div class="container">
                        <h1 class="card-title h2">User Info</h1>
                        <img src={{users.userImage}} width= "200" height = "250" class="img img-rounded"/>
    
                        <h1 class="card-title h4">Username</h1>
                        <p>{{users.userName}}</p>

                        <h1 class="card-title h4">First Name</h1>
                        <p>{{users.firstName}}</p>

                        <h1 class="card-title h4">Makeup Level</h1>
                        <p>{{users.makeupLevel}}</p>
                        {{#if user}}
                        <div class="button1 float-left">
                            <a href="/users/private/{{users._id}}"><input
                                type="submit"
                                name="profile"
                                value="Edit"
                            /></a>
                        </div>
                        {{/if}}
                    </div>   
                </div> 
            </div>
            <div class="col-md-8">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="text-right">Wishlist</h3>
                    </div>
                    {{#each user.wishlist}}
                        <p><a href="products/{{this.prodId}}">{{this.prodName}}</a></p>
                    {{/each}}
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-1">
                <div class="p-3 py-5">
                    <h3 class="text-right">Reviews</h3>
                </div>
            </div>
            {{#each reviews}}
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <span ><i class="rating"><strong>{{this.rating}}  </strong></i> 
                        <i class="text-warning fa fa-star"></i></span>
                        <h5><a href="../products/{{this.productId}}">{{this.title}}</a></h5>
                        <p>{{this.reviewBody}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

                